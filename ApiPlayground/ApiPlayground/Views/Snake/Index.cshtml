@{
    ViewData["Title"] = "SnakeGame (WIP)";
}

<style>
    th {
        margin: 10px;
    }
</style>

<div class="container">
    <div class="row align-items-start">
        <div class="col text-center">
            <div class="card">
                <div class="card-header text-center">
                    <h6>Highscore</h6>
                </div>
                <div class="card-body">
                    <table>
                        <tr>
                            <th>Name</th>
                            <th>Score</th>
                        </tr>
                        <tr>
                            <td>@ViewBag.name</td>
                            <td>@ViewBag.score</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col text-center">
            <div class="text-center">
                <canvas id="myCanvas" width="200" height="100" style="border:1px solid #000000;"></canvas>
            </div>
        </div>
        <div class="col text-center">
            <p>UserName selection will go here</p>
            <button class="btn btn-outline-primary" onclick="runGame()">Start Game</button>
        </div>
    </div>
</div> 





<script src="~/js/SnakeGame.js" asp-append-version="true"></script>