                        <th scope="col">Daytime</th>
                        <th scope="col">Night</th>
                        <th scope="col">All day</th>
                    </tr>
                    <tr>
                        <th scope="row">Temp</th>
                        <td>@Math.Round(Model.daily[0].temp.morn)°</td>
