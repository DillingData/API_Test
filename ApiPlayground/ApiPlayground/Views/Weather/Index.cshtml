@model ApiPlayground.Models.Root


@{
    ViewData["Title"] = "Weather";
}

<style>
    #card {
        width: 22rem;
        border-radius: 25px;
    }
    #card2 {
        width: 22rem;
        border-radius: 25px;
    }
    #card-header {
        border-radius: 25px; 
    }
    #code {
        visibility: hidden;
    }
    #table {
        width: 20rem;
    }
    tr {
        padding: 15px;
    }
    #body1{
        display: none;
    }
    #body2{
        display: none;
    }
    #body3{
        display: none;
    }
    #body4{
